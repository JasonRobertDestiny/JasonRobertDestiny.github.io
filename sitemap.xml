---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:xhtml="http://www.w3.org/1999/xhtml"
        xmlns:image="http://www.google.com/schemas/sitemap-image/1.1">

  <!-- Homepage - Highest Priority -->
  <url>
    <loc>{{ site.url }}/</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>daily</changefreq>
    <priority>1.0</priority>
    {% if site.header-img %}
    <image:image>
      <image:loc>{{ site.url }}/img/{{ site.header-img | split: '/' | last }}</image:loc>
      <image:title>{{ site.title }} - Homepage</image:title>
    </image:image>
    {% endif %}
  </url>

  <!-- About Page - High Priority -->
  <url>
    <loc>{{ site.url }}/about/</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.9</priority>
  </url>

  <!-- Archive Page -->
  <url>
    <loc>{{ site.url }}/archive/</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.8</priority>
  </url>

  <!-- Tags Page -->
  <url>
    <loc>{{ site.url }}/tags/</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.7</priority>
  </url>

  <!-- Projects Page -->
  <url>
    <loc>{{ site.url }}/projects/</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.8</priority>
  </url>

  <!-- Blog Posts - High Priority with Images -->
  {% for post in site.posts %}
  <url>
    <loc>{{ site.url }}{{ post.url }}</loc>
    <lastmod>{% if post.updated %}{{ post.updated | date_to_xmlschema }}{% else %}{{ post.date | date_to_xmlschema }}{% endif %}</lastmod>
    <changefreq>{% if post.date > site.time | date_to_xmlschema %}weekly{% else %}monthly{% endif %}</changefreq>
    <priority>0.9</priority>
    {% if post.multilingual %}
    <xhtml:link rel="alternate" hreflang="en" href="{{ site.url }}{{ post.url }}" />
    <xhtml:link rel="alternate" hreflang="zh" href="{{ site.url }}{{ post.url }}" />
    <xhtml:link rel="alternate" hreflang="x-default" href="{{ site.url }}{{ post.url }}" />
    {% endif %}
    {% if post.header-img %}
    <image:image>
      <image:loc>{{ site.url }}/img/{{ post.header-img | split: '/' | last }}</image:loc>
      <image:title>{{ post.title | xml_escape }}</image:title>
      {% if post.description %}
      <image:caption>{{ post.description | xml_escape | truncate: 200 }}</image:caption>
      {% endif %}
    </image:image>
    {% endif %}
  </url>
  {% endfor %}

  <!-- Static Pages (excluding system pages) -->
  {% for page in site.pages %}
    {% assign url_parts = page.url | split: '/' %}
    {% assign first_part = url_parts[1] %}
    {% unless page.url contains '/404' or page.url contains '/feed' or page.url contains '/sitemap' or page.url contains '/.git' or page.url contains '/doc/' or page.url contains '/pwa/' or page.url contains '/less/' or page.url contains '/fonts/' or page.url contains '/page' or page.url == '/' or page.url == '/index.html' or page.url == '/about/' or page.url == '/archive/' or page.url == '/tags/' or page.url == '/projects/' or page.url contains '.xml' or page.url contains '.json' or page.url contains '.txt' or page.url contains '.css' or page.url contains '.js' %}
    {% if page.title and page.layout %}
    <url>
      <loc>{{ site.url }}{{ page.url | replace:'index.html','' }}</loc>
      <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
      <changefreq>monthly</changefreq>
      <priority>0.6</priority>
    </url>
    {% endif %}
    {% endunless %}
  {% endfor %}

</urlset>
