---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  <!-- Homepage -->
  <url>
    <loc>{{ site.url }}/</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>1.0</priority>
  </url>

  <!-- Blog posts -->
  {% for post in site.posts %}
  <url>
    <loc>{{ site.url }}{{ post.url }}</loc>
    <lastmod>{{ post.date | date_to_xmlschema }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.9</priority>
  </url>
  {% endfor %}

  <!-- Pages (excluding 404, feed, sitemap, and archive directory) -->
  {% for page in site.pages %}
    {% unless page.url contains '/404' or page.url contains '/feed' or page.url contains '/sitemap' or page.url contains '/archive/' or page.url contains '/.git' or page.url contains '/doc/' or page.url contains '/pwa/' or page.url contains '/less/' or page.url contains '/fonts/' %}
    {% if page.title %}
    <url>
      <loc>{{ site.url }}{{ page.url }}</loc>
      <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
      <changefreq>monthly</changefreq>
      <priority>{% if page.url == '/about.html' or page.url == '/about/' %}0.8{% else %}0.7{% endif %}</priority>
    </url>
    {% endif %}
    {% endunless %}
  {% endfor %}
</urlset>
