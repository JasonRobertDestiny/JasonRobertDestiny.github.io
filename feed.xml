---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0"
     xmlns:atom="http://www.w3.org/2005/Atom"
     xmlns:dc="http://purl.org/dc/elements/1.1/"
     xmlns:content="http://purl.org/rss/1.0/modules/content/">
  <channel>
    <title>{{ site.title | xml_escape }}</title>
    <description>{{ site.description | xml_escape }}</description>
    <link>{{ site.url }}{{ site.baseurl }}/</link>
    <atom:link href="{{ site.url }}{{ site.baseurl }}/feed.xml" rel="self" type="application/rss+xml"/>
    <pubDate>{{ site.time | date_to_rfc822 }}</pubDate>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    <generator>Jekyll v{{ jekyll.version }}</generator>
    <language>zh-CN</language>
    <copyright>Copyright {{ site.time | date: '%Y' }} {{ site.title }}</copyright>
    <managingEditor>{{ site.email }} ({{ site.title }})</managingEditor>
    <webMaster>{{ site.email }} ({{ site.title }})</webMaster>
    <ttl>60</ttl>
    <image>
      <url>{{ site.url }}{{ site.sidebar-avatar }}</url>
      <title>{{ site.title | xml_escape }}</title>
      <link>{{ site.url }}{{ site.baseurl }}/</link>
      <width>144</width>
      <height>144</height>
    </image>
    {% for post in site.posts limit:20 %}
    <item>
      <title>{{ post.title | xml_escape }}</title>
      <dc:creator>{{ post.author | default: site.title | xml_escape }}</dc:creator>
      <description>{{ post.description | default: post.excerpt | strip_html | xml_escape | truncate: 300 }}</description>
      <content:encoded><![CDATA[
        {% if post.header-img %}
        <p><img src="{{ site.url }}/img/{{ post.header-img | split: '/' | last }}" alt="{{ post.title | xml_escape }}" /></p>
        {% endif %}
        {{ post.content }}
      ]]></content:encoded>
      <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
      <link>{{ site.url }}{{ site.baseurl }}{{ post.url }}</link>
      <guid isPermaLink="true">{{ site.url }}{{ site.baseurl }}{{ post.url }}</guid>
      {% for tag in post.tags %}
      <category>{{ tag | xml_escape }}</category>
      {% endfor %}
    </item>
    {% endfor %}
  </channel>
</rss>
